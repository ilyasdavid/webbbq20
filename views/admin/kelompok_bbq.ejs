<script type="text/javascript">
    function deleteJadwal(id) {
        let idJadwal = id;

        swal({
            title: "Yakin Ingin Menghapus Data Jadwal ini?",
            text: "Data yang dihapus, tidak bisa kembali lagi.",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then(willDelete => {
            if (willDelete) {
                window.location.assign(`/admin/jadwal/delete/${idJadwal}`);
            }
        });
    }    
</script>